
<%=  form_for(@transaction, :method => 'post') do |f| %>
<%= error_messages(f.object) %>
  <%= f.hidden_field :sendingAccount_id  %><br>

  <%= f.label "Transaction number:" %>
  <%= f.text_field :transactionNumber, :readonly => true %><br>

  <%= f.label "The account number you want to send money to:" %>
  <%= f.text_field(:recievingAccount_id) %><br>

  <%= f.label "The amount you want to send:" %>
  <%= f.number_field(:amount) %><br>

  <%= f.label "Choose the currency:" %>
  <%= f.text_field(:currency) %><br>

  <%= f.label "Description:" %>
  <%= f.text_field(:description) %><br>

  <%= f.submit 'Submit' %>

<% end %>
