<h1>Create a payment here</h1>
<%= form_with scope: :transaction , url: transactions_create_path, local: true do |f| %>
<p>
        <%= f.label "The account number you want to send money from:" %>
         <%= f.text_field(:sendingAccount) %>
           <%  %>
</p>
<p>
        <%= f.label "The account number you want to send money to:" %>
         <%= f.text_field(:recievingAccount) %>
           <%  %>
</p>
<p>
        <%= f.label "The amount you want to send:" %>
         <%= f.number_field(:amount) %>
</p>
<p>
        <%= f.label "Choose the currency:" %>
         <%= select_tag(:currency, options_for_select([ ['EUR', 'EUR'],['GBP', 'GBP'],['USD', 'USD']], 'GBP'))%>
</p>
<p>
        <%= f.label "Transaction number:" %>
         <%= f.text_field:transactionNumber %>
</p>
<p>
        <%= f.submit "Create payment "%>
</p>
  <% end %>
